# Free Fire Bot Deployment Configuration
# Optimized for Replit environment with priority resource allocation

[deployment]
name = "free-fire-bot"
type = "python"
priority = "high"
memory_limit = "512MB"
cpu_priority = "normal"

[services]
# Primary bot service
telegram_bot = {
    command = "python main.py",
    port = null,
    health_check = "/health",
    restart_policy = "always",
    max_restarts = 10
}

# Web interface service
web_interface = {
    command = "cd web && python app.py",
    port = 5000,
    health_check = "/api/status",
    restart_policy = "always",
    max_restarts = 5
}

[environment]
# Production environment variables
NODE_ENV = "production"
FLASK_ENV = "production"
LOG_LEVEL = "INFO"

[resource_limits]
# Resource allocation for optimal performance
memory = "512MB"
cpu = "1.0"
storage = "1GB"
bandwidth = "unlimited"

[monitoring]
# Health monitoring configuration
enable_logging = true
log_retention = "7d"
metrics_enabled = true
error_tracking = true

[scaling]
# Auto-scaling configuration
min_instances = 1
max_instances = 3
scale_on_cpu = 80
scale_on_memory = 75

[security]
# Security configuration
https_only = true
cors_enabled = true
rate_limiting = true
max_requests_per_minute = 100